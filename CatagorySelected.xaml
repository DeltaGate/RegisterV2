<Window x:Class="RegisterV2.CatagorySelected"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RegisterV2"
        mc:Ignorable="d"
        Title="CatagorySelected" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="363*"/>
        </Grid.ColumnDefinitions>
        <ListBox Name="lstCat" SelectionChanged="ListBox_SelectionChanged" Grid.ColumnSpan="2">
            <ListBox Height="275" Width="572" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        </ListBox>

    </Grid>
</Window>
